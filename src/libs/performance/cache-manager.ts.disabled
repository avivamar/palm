import type Redis from 'ioredis';

/**
 * é«˜æ€§èƒ½ç¼“å­˜ç®¡ç†å™¨
 * æ”¯æŒ Redis å’Œå†…å­˜åŒé‡ç¼“å­˜æœºåˆ¶
 * éµå¾ª CLAUDE.md: æ€§èƒ½ä¼˜åŒ–ä¼˜å…ˆï¼Œå®‰å…¨æ€§ä¿éšœ
 */
export class CacheManager {
  private redis: Redis | null = null;
  private memoryCache: Map<string, { value: any; expiry: number; size: number }> = new Map();
  private stats = {
    hits: 0,
    misses: 0,
    errors: 0,
    memoryHits: 0,
    redisHits: 0,
  };

  // å†…å­˜ç¼“å­˜é…ç½®
  private readonly MAX_MEMORY_SIZE = 50 * 1024 * 1024; // 50MB
  private readonly MAX_MEMORY_ITEMS = 10000;
  private currentMemorySize = 0;

  // æ¸…ç†é—´éš”
  private cleanupInterval: NodeJS.Timeout | null = null;

  constructor() {
    // Temporarily disable Redis to debug Railway deployment issue
    // this.initializeRedis();
    this.startCleanupInterval();
  }

  /**
   * åˆå§‹åŒ– Redis è¿æ¥
   */
  // eslint-disable-next-line @typescript-eslint/no-unused-vars
  private async initializeRedis(): Promise<void> {
    try {
      if (process.env.REDIS_URL) {
        const Redis = (await import('ioredis')).default;
        this.redis = new Redis(process.env.REDIS_URL, {
          // è¿æ¥é…ç½®ä¼˜åŒ– - é€‚é… Upstash
          maxRetriesPerRequest: 3,
          lazyConnect: true,
          // è¶…æ—¶é…ç½®ä¼˜åŒ–
          connectTimeout: 10000, // 10ç§’è¿æ¥è¶…æ—¶
          commandTimeout: 5000, // 5ç§’å‘½ä»¤è¶…æ—¶
          // è¿æ¥ä¿æŒä¼˜åŒ–
          keepAlive: 30000, // 30ç§’ keepAlive
          // ç½‘ç»œé…ç½®
          family: 4, // IPv4
          enableOfflineQueue: false,
          enableReadyCheck: false,
        });

        this.redis.on('error', (error) => {
          console.warn('[CacheManager] Redis error, falling back to memory:', error);
          // ä¸ç«‹å³è®¾ç½®ä¸º nullï¼Œè®©é‡è¿æœºåˆ¶å¤„ç†
        });

        this.redis.on('connect', () => {
          // eslint-disable-next-line no-console
          console.log('[CacheManager] âœ… Redis connected successfully');
        });

        this.redis.on('ready', () => {
          // eslint-disable-next-line no-console
          console.log('[CacheManager] âœ… Redis ready for commands');
        });

        // eslint-disable-next-line no-console
        console.log('[CacheManager] ğŸ”„ Redis connection initialized');
      } else {
        console.warn('[CacheManager] No REDIS_URL found, using memory cache only');
        this.redis = null;
      }
    } catch (error) {
      console.error('[CacheManager] Failed to initialize Redis:', error);
      this.redis = null;
    }
  }


  /**
   * è·å–ç¼“å­˜å€¼
   */
  async get<T>(key: string): Promise<T | null> {
    // 1. å…ˆæ£€æŸ¥å†…å­˜ç¼“å­˜
    const memoryResult = this.getFromMemory<T>(key);
    if (memoryResult !== null) {
      this.stats.hits++;
      this.stats.memoryHits++;
      return memoryResult;
    }

    // 2. æ£€æŸ¥ Redis ç¼“å­˜
    if (this.redis) {
      try {
        const value = await this.redis.get(key);
        if (value) {
          const redisResult = JSON.parse(value);
          this.stats.hits++;
          this.stats.redisHits++;

          // å°† Redis ç»“æœç¼“å­˜åˆ°å†…å­˜ä¸­
          this.setInMemory(key, redisResult, 300); // 5åˆ†é’Ÿå†…å­˜ç¼“å­˜
          return redisResult;
        }
      } catch (error) {
        console.error('[CacheManager] Redis get error:', error);
        this.stats.errors++;
      }
    }

    this.stats.misses++;
    return null;
  }

  /**
   * è®¾ç½®ç¼“å­˜å€¼
   */
  async set<T>(key: string, value: T, ttlSeconds: number = 3600): Promise<void> {
    // 1. è®¾ç½®å†…å­˜ç¼“å­˜
    this.setInMemory(key, value, Math.min(ttlSeconds, 300)); // å†…å­˜ç¼“å­˜æœ€å¤š5åˆ†é’Ÿ

    // 2. è®¾ç½® Redis ç¼“å­˜
    if (this.redis) {
      try {
        await this.redis.setex(key, ttlSeconds, JSON.stringify(value));
      } catch (error) {
        console.error('[CacheManager] Redis set error:', error);
        this.stats.errors++;
      }
    }
  }

  /**
   * åˆ é™¤ç¼“å­˜
   */
  async delete(key: string): Promise<void> {
    // 1. åˆ é™¤å†…å­˜ç¼“å­˜
    const memoryItem = this.memoryCache.get(key);
    if (memoryItem) {
      this.currentMemorySize -= memoryItem.size;
      this.memoryCache.delete(key);
    }

    // 2. åˆ é™¤ Redis ç¼“å­˜
    if (this.redis) {
      try {
        await this.redis.del(key);
      } catch (error) {
        console.error('[CacheManager] Redis delete error:', error);
        this.stats.errors++;
      }
    }
  }

  /**
   * æ‰¹é‡åˆ é™¤ç¼“å­˜ï¼ˆæ”¯æŒæ¨¡å¼åŒ¹é…ï¼‰
   */
  async deletePattern(pattern: string): Promise<void> {
    // 1. åˆ é™¤åŒ¹é…çš„å†…å­˜ç¼“å­˜
    const regex = new RegExp(pattern.replace(/\*/g, '.*'));
    for (const [key, item] of this.memoryCache.entries()) {
      if (regex.test(key)) {
        this.currentMemorySize -= item.size;
        this.memoryCache.delete(key);
      }
    }

    // 2. åˆ é™¤åŒ¹é…çš„ Redis ç¼“å­˜
    if (this.redis) {
      try {
        const keys = await this.redis.keys(pattern);
        if (keys.length > 0) {
          await this.redis.del(...keys);
        }
      } catch (error) {
        console.error('[CacheManager] Redis pattern delete error:', error);
        this.stats.errors++;
      }
    }
  }

  /**
   * ä»å†…å­˜è·å–ç¼“å­˜
   */
  private getFromMemory<T>(key: string): T | null {
    const item = this.memoryCache.get(key);
    if (!item) {
      return null;
    }

    if (Date.now() > item.expiry) {
      this.currentMemorySize -= item.size;
      this.memoryCache.delete(key);
      return null;
    }

    return item.value;
  }

  /**
   * è®¾ç½®å†…å­˜ç¼“å­˜
   */
  private setInMemory<T>(key: string, value: T, ttlSeconds: number): void {
    const serialized = JSON.stringify(value);
    const size = new Blob([serialized]).size;

    // æ£€æŸ¥æ˜¯å¦è¶…è¿‡å•ä¸ªé¡¹ç›®å¤§å°é™åˆ¶ï¼ˆ1MBï¼‰
    if (size > 1024 * 1024) {
      return;
    }

    // åˆ é™¤ç°æœ‰é¡¹ç›®ï¼ˆå¦‚æœå­˜åœ¨ï¼‰
    const existing = this.memoryCache.get(key);
    if (existing) {
      this.currentMemorySize -= existing.size;
    }

    // æ£€æŸ¥å†…å­˜é™åˆ¶
    this.ensureMemoryLimits(size);

    // è®¾ç½®æ–°é¡¹ç›®
    this.memoryCache.set(key, {
      value,
      expiry: Date.now() + ttlSeconds * 1000,
      size,
    });

    this.currentMemorySize += size;
  }

  /**
   * ç¡®ä¿å†…å­˜é™åˆ¶
   */
  private ensureMemoryLimits(newItemSize: number): void {
    // æ£€æŸ¥é¡¹ç›®æ•°é‡é™åˆ¶
    while (this.memoryCache.size >= this.MAX_MEMORY_ITEMS) {
      this.evictOldestItem();
    }

    // æ£€æŸ¥å†…å­˜å¤§å°é™åˆ¶
    while (this.currentMemorySize + newItemSize > this.MAX_MEMORY_SIZE) {
      if (!this.evictOldestItem()) {
        break; // æ— æ³•é‡Šæ”¾æ›´å¤šå†…å­˜
      }
    }
  }

  /**
   * é©±é€æœ€æ—§çš„é¡¹ç›®
   */
  private evictOldestItem(): boolean {
    let oldestKey: string | null = null;
    let oldestTime = Infinity;

    for (const [key, item] of this.memoryCache.entries()) {
      if (item.expiry < oldestTime) {
        oldestTime = item.expiry;
        oldestKey = key;
      }
    }

    if (oldestKey) {
      const item = this.memoryCache.get(oldestKey)!;
      this.currentMemorySize -= item.size;
      this.memoryCache.delete(oldestKey);
      return true;
    }

    return false;
  }

  /**
   * æ¸…ç†è¿‡æœŸçš„å†…å­˜ç¼“å­˜
   */
  private cleanupExpiredItems(): void {
    const now = Date.now();
    for (const [key, item] of this.memoryCache.entries()) {
      if (now > item.expiry) {
        this.currentMemorySize -= item.size;
        this.memoryCache.delete(key);
      }
    }
  }

  /**
   * å¯åŠ¨æ¸…ç†é—´éš”
   */
  private startCleanupInterval(): void {
    this.cleanupInterval = setInterval(() => {
      this.cleanupExpiredItems();
    }, 60000); // æ¯åˆ†é’Ÿæ¸…ç†ä¸€æ¬¡
  }

  /**
   * æ¸…ç©ºæ‰€æœ‰ç¼“å­˜
   */
  async clear(): Promise<void> {
    // 1. æ¸…ç©ºå†…å­˜ç¼“å­˜
    this.memoryCache.clear();
    this.currentMemorySize = 0;

    // 2. æ¸…ç©º Redis ç¼“å­˜
    if (this.redis) {
      try {
        await this.redis.flushdb();
      } catch (error) {
        console.error('[CacheManager] Redis clear error:', error);
        this.stats.errors++;
      }
    }
  }

  /**
   * è·å–ç¼“å­˜ç»Ÿè®¡ä¿¡æ¯
   */
  getStats() {
    const hitRate = this.stats.hits + this.stats.misses > 0
      ? (this.stats.hits / (this.stats.hits + this.stats.misses) * 100).toFixed(2)
      : '0.00';

    return {
      ...this.stats,
      hitRate: `${hitRate}%`,
      memoryItems: this.memoryCache.size,
      memorySize: `${(this.currentMemorySize / 1024 / 1024).toFixed(2)}MB`,
      redisConnected: !!this.redis,
    };
  }

  /**
   * é‡ç½®ç»Ÿè®¡ä¿¡æ¯
   */
  resetStats(): void {
    this.stats = {
      hits: 0,
      misses: 0,
      errors: 0,
      memoryHits: 0,
      redisHits: 0,
    };
  }

  /**
   * å…³é—­ç¼“å­˜ç®¡ç†å™¨
   */
  async close(): Promise<void> {
    if (this.cleanupInterval) {
      clearInterval(this.cleanupInterval);
    }

    if (this.redis) {
      await this.redis.quit();
      this.redis = null;
    }

    this.memoryCache.clear();
    this.currentMemorySize = 0;
  }
}

// å¯¼å‡ºå•ä¾‹å®ä¾‹
export const cacheManager = new CacheManager();
