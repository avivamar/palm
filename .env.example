OPENAI_MAX_RETRIES=3

# Claude 配置
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key
ANTHROPIC_API_KEY_1=sk-ant-your_anthropic_api_key_1
ANTHROPIC_API_KEY_2=sk-ant-your_anthropic_api_key_2
