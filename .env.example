SITE_URL=https://www.rolitt.com

# 📝 Notion 集成
NOTION_API_KEY=secret_your_notion_api_key
NOTION_DATABASE_ID=your_notion_database_id

# 🔧 管理/调试
ADMIN_DEBUG_ENABLED=false

# 🖼️ 图片上传/存储 (Cloudflare R2)
