{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "rootDir": "./src",
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
