{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./",
    "paths": {
      "@/*": ["../../src/*"],
      "@rolitt/shared/*": ["../shared/src/*"]
    },
    "outDir": "./dist",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples"
  ]
}
